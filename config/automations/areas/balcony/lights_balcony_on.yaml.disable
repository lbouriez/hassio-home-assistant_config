alias: Balcony - Lights auto on
initial_state: True
trigger:
  - platform: sun
    event: sunset
    offset: "-00:30:00"
condition:
  condition: and
  conditions:
    # - condition: state
    #   entity_id: 'sun.sun'
    #   state: 'below_horizon'
    - condition: state
      entity_id: light.balcony_group
      state: 'off'
action:
  - service: light.turn_on
    entity_id: 'light.balcony_group'